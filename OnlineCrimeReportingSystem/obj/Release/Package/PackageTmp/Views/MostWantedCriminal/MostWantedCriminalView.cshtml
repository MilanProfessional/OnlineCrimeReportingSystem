
@{
    ViewBag.Title = "MostWantedCriminalView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="team" class="pb-5">
    <div class="container">
        <h1 class="section-title h1"><tt><b>Most Wanted Criminals</b></tt></h1>
        
        <br />
        <div class="row">
            <!-- Most Wanted Criminals -->
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                        <div class="mainflip">
                            <div class="frontside">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <p>@*<img class=" img-fluid" src="~/App_Data/uploads/@item.Image" alt="">*@</p>
                                        <p>@*<img class=" img-fluid" src="@path@item.Image" alt="">*@</p>
                                        <p><img class="img-fluid" src="http://localhost:50189/Content/Images/@item.Image" alt=""></p>
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">@item.FrontDescription</p>

                                    </div>
                                </div>
                            </div>
                            <div class="backside">
                                <div class="card">
                                    <div class="card-body text-center mt-4">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">@item.BackDescription</p>

                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

