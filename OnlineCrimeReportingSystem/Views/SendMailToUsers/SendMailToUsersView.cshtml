
@{
    ViewBag.Title = "SendMailToUsersView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact" style="margin-left:-140px; height:100%;">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form method="post" action="/SendMailToUsers/SendMail" style="margin-bottom:40px;">
                    <h1 class="">Send Mail to Clients</h1>


                    

                    <div class="form-group">
                        <label>Email Address</label>
                        <input name="email" type="email" class="form-control" placeholder="Email Address of User">
                    </div>

                    <div class="form-group">
                        <label>Subject</label>
                        <input name="subject" type="text" class="form-control" placeholder=" Subject">
                    </div>

                    <div class="form-group">
                        <label>Message</label>
                        <textarea name="message" class="form-control" placeholder="Message"></textarea>
                    </div>
                    <div>
                        
                        <label for="mySubmit" class="btn btn-info btn-block"><i class="fa fa-paper-plane" aria-hidden="true"></i> Send Message</label>
                        <input id="mySubmit" type="submit" value="" class="hidden" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

